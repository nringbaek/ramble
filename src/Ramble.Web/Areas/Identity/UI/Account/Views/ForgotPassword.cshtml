@model  ForgotPasswordModel

<p class="title">Forgot password</p>

<hr>

<form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
    <div class="field">
        <p class="control has-icons-left has-icons-right">
            <input class="input" type="email" placeholder="Email" appAutofocus>
            <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
            </span>
        </p>
    </div>

    <div class="is-clearfix">
        <a asp-controller="Account" asp-action="Login" class="to-login">To sign in</a>
        <div class="field is-pulled-right">
            <p class="control">
                <button class="button is-primary"type="submit">
                    Reset my password
                </button>
            </p>
        </div>
    </div>
</form>